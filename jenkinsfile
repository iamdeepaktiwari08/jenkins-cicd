pipeline {
    agent any

    environment {
        IMAGE_NAME = "website"
        CONTAINER_NAME = "website"
        PORT = "80"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/iamdeepaktiwari08/jenkins-cicd.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                # Build image with a tag using the short commit hash for versioning
                COMMIT_HASH=\$(git rev-parse --short HEAD)
                sudo docker build -t ${IMAGE_NAME}:\$COMMIT_HASH .
                """
            }
        }

        stage('Stop Old Container') {
            steps {
                sh """
                sudo docker rm -f ${CONTAINER_NAME} || true
                """
            }
        }

        stage('Run New Container') {
            steps {
                sh """
                # Use the image tagged with the latest commit
                COMMIT_HASH=\$(git rev-parse --short HEAD)
                sudo docker run -d --name ${CONTAINER_NAME} -p ${PORT}:80 ${IMAGE_NAME}:\$COMMIT_HASH
                """
            }
        }
    }

    post {
        success {
            echo "✅ Website deployed successfully on port ${PORT}."
        }
        failure {
            echo "❌ Build or deploy failed."
        }
    }
}
